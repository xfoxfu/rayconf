{
  "name": "rayconf",
  "version": "0.1.3",
  "description": "modern configuration for node",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/xfoxfu/rayconf.git",
  "author": "Yuze Fu <i@xfox.me>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "config",
    "env",
    "environment"
  ],
  "scripts": {
    "lint": "eslint --ignore-pattern=*.json --quiet src --ext .ts",
    "check": "tsc --noEmit",
    "format": "prettier --write --ignore-path .gitignore '**/*.{js,ts}' -l",
    "test": "ava"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^10.0.0",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "ava": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn lint"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "validator": "^12.2.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
